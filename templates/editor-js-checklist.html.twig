<div class="echecklist">
  {% for item in items %}
    <div class="checklist_item{{ item['checked'] ? ' checked' : '' }}">
      <span class="checklist_checkbox{{ item['checked'] ? ' checked' : '' }}"></span>
      <div class="checklist_text">
        {{ item['text'] }}
      </div>
    </div>
  {% endfor %}
</div>
